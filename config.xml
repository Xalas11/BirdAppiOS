<?xml version='1.0' encoding='utf-8'?>
<widget id="com.xuanthuy.birds" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>XuanThuyBirds</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    
    
    <!-- GLOBAL SETTINGS -->
	<preference name="Fullscreen" value="true" />
	<preference name="Orientation" value="portrait" />

	<!-- iOS SETTINGS -->
	<preference name="HideKeyboardFormAccessoryBar" value="true"/>
	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
		<!-- ICONS -->
		<icon src="res/icon/iphone.png" width="29" height="29" />
		<icon src="res/icon/iphone.png" width="40" height="40" />
		<icon src="res/icon/iphone.png" width="50" height="50" />
		<icon src="res/icon/iphone.png" width="57" height="57" />
		<icon src="res/icon/iphone.png" width="58" height="58" />
		<icon src="res/icon/iphone.png" width="60" height="60" />
		<icon src="res/icon/iphone.png" width="72" height="72" />
		<icon src="res/icon/iphone.png" width="76" height="76" />
		<icon src="res/icon/iphone.png" width="80" height="80" />
		<icon src="res/icon/iphone.png" width="100" height="100" />
		<icon src="res/icon/iphone.png" width="114" height="114" />
		<icon src="res/icon/iphone.png" width="120" height="120" />
		<icon src="res/icon/iphone.png" width="144" height="144" />
		<icon src="res/icon/iphone.png" width="152" height="152" />
		<icon src="res/icon/iphone.png" width="180" height="180" />
		
		<!-- SPLASH SCREEN -->
		<splash src="res/screen/iphone.png" width="320" height="480"/>
		<splash src="res/screen/iphone.png" width="640" height="960"/>
		<splash src="res/screen/iphone.png" width="768" height="1024"/>
		<splash src="res/screen/iphone.png" width="1536" height="2048"/>
		<splash src="res/screen/iphone.png" width="640" height="1136"/>
		<splash src="res/screen/iphone.png" width="750" height="1334"/>
		<splash src="res/screen/iphone.png" width="1242" height="2208"/>
		
		<preference name="SplashScreenDelay" value="2000" />
		
	</platform>
    
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
